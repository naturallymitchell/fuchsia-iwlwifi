    "//src/connectivity/wlan/drivers/testing/lib/sim-env",
    "//src/connectivity/wlan/drivers/testing/lib/sim-fake-ap",
    "//src/connectivity/wlan/drivers/third_party/intel/iwlwifi:core",
  ]
}

