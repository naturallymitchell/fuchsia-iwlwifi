  defines = testing_defines
  testonly = true

  sources = [
    "sim-default-nvm.cc",
    "sim-mvm.cc",
    "sim-nvm.cc",
    "trans-sim.cc",
  ]

  deps = [
    "//garnet/lib/wlan/protocol",
