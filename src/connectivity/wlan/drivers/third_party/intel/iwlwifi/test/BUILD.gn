import("//build/package.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

# Compile flags
testing_defines = [
  "CONFIG_TEST_SIM=1",
  "CPTCFG_IWLMVM=1",
]

# Simulated transportation layer -- for unittest code.
source_set("iwlwifi_sim_trans_ss") {
  defines = testing_defines
  testonly = true

  sources = [
    "sim-mvm.cc",
    "trans-sim.cc",
  ]

  deps = [
    "//garnet/lib/wlan/protocol",
    "//zircon/public/banjo/ddk.protocol.pci",
    "//zircon/public/banjo/ddk.protocol.wlanphyimpl",
    "//zircon/public/lib/ddk",
    "//zircon/public/lib/driver",
    "//zircon/public/lib/fake_ddk",
  ]

  public_deps = [
    "//src/connectivity/wlan/drivers/testing/lib/sim-env:simenv",
    "//src/connectivity/wlan/drivers/third_party/intel/iwlwifi:core",
  ]
}

group("test") {
  testonly = true
  deps = [
    ":iwlwifi_test",
  ]
}

# Definition for simulated transportation layer + gtest
testing_deps = [
  ":iwlwifi_sim_trans_ss",
  "//src/lib/fxl/test:gtest_main",
]

# The dummy code for developer to start a new test.
executable("dummy_test") {
  output_name = "dummy_test"
  testonly = true

  sources = [
    "dummy_test.cc",
  ]

  defines = testing_defines
  deps = testing_deps
}

executable("iwl-phy-db_test") {
  output_name = "iwl-phy-db_test"
  testonly = true

  sources = [
    "iwl-phy-db_test.cc",
  ]

  defines = testing_defines
  deps = testing_deps
}

# Test code for MVM features.
executable("mvm_test") {
  output_name = "mvm_test"
  testonly = true

  sources = [
    "mvm_test.cc",
  ]

  defines = testing_defines
  deps = testing_deps
}

executable("notif-wait_test") {
  output_name = "notif-wait_test"
  testonly = true

  sources = [
    "notif-wait_test.cc",
  ]

  defines = testing_defines
  deps = testing_deps
}

executable("pcie_test") {
  output_name = "pcie_test"
  testonly = true

  sources = [
    "pcie_test.cc",
  ]

  defines = testing_defines
  deps = [
    "//src/connectivity/wlan/drivers/third_party/intel/iwlwifi:pcie",
    "//zircon/public/lib/fake-bti",
    "//zircon/public/lib/mock-function",
    "//zircon/public/lib/zxtest",
  ]
}

executable("phy-ctxt_test") {
  output_name = "phy-ctxt_test"
  testonly = true

  sources = [
    "phy-ctxt_test.cc",
  ]

  defines = testing_defines
  deps = testing_deps
}

executable("utils_test") {
  output_name = "utils_test"
  testonly = true

  sources = [
    "utils_test.cc",
  ]

  defines = testing_defines
  deps = testing_deps
}

unittest_package("iwlwifi_test") {
  package_name = "iwlwifi_test"

  deps = [
    ":dummy_test",
    ":iwl-phy-db_test",
    ":mvm_test",
    ":notif-wait_test",
    ":pcie_test",
    ":phy-ctxt_test",
    ":utils_test",
  ]

  tests = [
    {
      name = "dummy_test"
      environments = basic_envs
    },
    {
      name = "iwl-phy-db_test"
      environments = basic_envs
    },
    {
      name = "mvm_test"
      environments = basic_envs
    },
    {
      name = "notif-wait_test"
      environments = basic_envs
    },
    {
      name = "pcie_test"
      environments = basic_envs
    },
    {
      name = "phy-ctxt_test"
      environments = basic_envs
    },
    {
      name = "utils_test"
      environments = basic_envs
    },
  ]
}
